<div class="container">

    <div class="text-center mt-3">
        <h3 class="font-weight-bold"> Welcome to chatAdda - a complete chatApp</h3>
        <div >
            <i class="mw-100 box-shadow theme-color bi bi-power rounded-circle border p-2 m-2" style="font-size: 8vh;"></i>
        </div>
        <div>Log in to continue</div>
    </div>
    <div class="card text-white bg-info mx-auto box-shadow" style="margin-top:2%">
        <%# <div class="card-header bg-dark text-center"></div> %>
        <div class="card-body d-flex">
            <div class="container">
                <div class="row justify-content-around">
                    <div class="pr-5 col-8">
                        <%# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> %>
                        
                        <%# login form %>
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-light box-shadow">Log In</button>
                            </div>
                        </form>
                    </div>

                    <%# This is divider %>
                    <%# <div class="border"></div> %>
                    <div class="my-auto">
                        <div class="border" style="height:15vh; width: 1px; margin:auto;"></div>
                        <div class="border p-3 rounded-circle bg-dark">OR</div>
                        <div class="border" style="height:15vh; width: 1px; margin:auto;"></div>
                    </div>
                    <%# <div class="border"></div> %>

                    <%# Sign up col %>
                    <div class="col-3 d-flex align-items-center justify-content-center">
                        <%# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> %>
                        
                        <button type="button" class="btn btn-light btn-lg box-shadow"><i class="bi bi-box-arrow-in-right pr-2 "></i>Sign up</button>
                    </div>
                    <%# <h5 class="card-title">Info card title</h5> %>
                </div>
            </div>
        </div>
    </div>
</div>